{
  "name": "temporal-replay-action-ts",
  "version": "1.0.0",
  "description": "GitHub Action for testing Temporal TypeScript workflows for determinism using replay testing",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "ncc build lib/index.js -o dist --source-map --license licenses.txt",
    "package": "npm run build && npm run bundle",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts'",
    "format-check": "prettier --check 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "act -j integration-test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesgibbons/temporal-replay-action-ts.git"
  },
  "keywords": [
    "temporal",
    "workflow",
    "replay",
    "determinism",
    "testing",
    "github-action",
    "typescript"
  ],
  "author": "James Gibbons",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@temporalio/client": "^1.10.0",
    "@temporalio/worker": "^1.10.0",
    "@temporalio/common": "^1.10.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
